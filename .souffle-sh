#!/bin/bash

#
# .souffle_sh
#
# A quick and dirty bash script for developing souffle.
#


export SOUFFLE=$(pwd)

JOBS=8

alias souffle=$SOUFFLE/src/souffle
alias souffle-profile=$SOUFFLE/src/souffle-profile

souffle_help() {
cat << EOF

    > .souffle-sh

        A quick and dirty bash script for developing souffle.

    souffle             Alias for souffle executable.
    souffle-profile     Alias for souffle-profile executable.
    souffle_ubuntu      Install all packages required by souffle for Ubuntu.
    souffle_setup       Bootstrap, configure, and make.
    souffle_teardown    Make clean and remove all files ignored by git.
    souffle_make        Run make.
    souffle_reset       Reset hard to last commit, run teardown and setup.
    souffle_commit      Add everything to git and do a commit.
    souffle_push        Push the current branch to the git remote.
    souffle_test        Run make and then the testsuite on the given tests.
    souffle_debug       Run make and then the test in directory \$SOUFFLE/\$1/\$2.
    souffle_format       Format the code with clang-format.

EOF
}

souffle_ubuntu() {
sudo apt-get update && \
sudo apt-get upgrade && \
sudo apt-get install \
    git \
    automake \
    autoconf \
    libtool \
    doxygen \
    flex \
    bison \
    sqlite \
    libsqlite3-dev \
    libedit-dev \
    valgrind \
    gdb \
    graphviz \
    default-jdk \
    default-jre \
    zlib* \
    clang-format
}

souffle_setup() {
    cd $SOUFFLE && \
    chmod 775 bootstrap && \
    ./bootstrap && \
    chmod 775 configure && \
    ./configure && \
    make -j$JOBS && \
    cd -
}

souffle_teardown() {
    cd $SOUFFLE && \
    git clean -xdf && \
    cd -
}

souffle_make() {
    cd $SOUFFLE && \
    make -j$JOBS $1 && \
    cd -
}

souffle_reset() {
    souffle_teardown && \
    souffle_setup && \
    souffle_make
}

souffle_commit() {
    cd $SOUFFLE && \
    git add . && \
    git commit -m "$(date)" && \
    cd -
}

souffle_push() {
    souffle_commit && \
    cd $SOUFFLE && \
    git push origin $(git branch | grep \* | sed 's/^\*\s//g') && \
    cd -
}

souffle_test() {
    souffle_make &&
    cd $SOUFFLE/tests && \
    ./testsuite -j$JOBS $@ && \
    cd -
}

souffle_debug() {
    souffle_make && \
    mkdir -p $SOUFFLE/tests/testsuite.dir/$1/$2 && \
    ln -sf $SOUFFLE/tests/$1/$2/$2.dl $SOUFFLE/tests/testsuite.dir/$1/$2/$2.dl && \
    $SOUFFLE/src/souffle $SOUFFLE/tests/$1/$2/$2.dl \
        -F $SOUFFLE/tests/$1/$2/facts \
        -D $SOUFFLE/tests/testsuite.dir/$1/$2 \
        -j$JOBS \
        --debug-report=$SOUFFLE/tests/testsuite.dir/$1/$2/$2.html \
        $3 \
        1> $SOUFFLE/tests/testsuite.dir/$1/$2/$2.out \
        2> $SOUFFLE/tests/testsuite.dir/$1/$2/$2.err
}

souffle_format() {
    clang-format -i -style=file src/*.c src/*.h src/*.cc src/*.hh src/*.cpp src/*.hpp
}
